# =============================================================================
# AIChatDesk Environment Configuration
# =============================================================================
# Copy this file to templates/server/.env and fill in your values
# Never commit .env to version control
#
# See INTEGRATION_GUIDE.md for detailed setup instructions

# =============================================================================
# 1. SERVER CONFIGURATION
# =============================================================================

AICHATDESK_PORT=8005
AICHATDESK_CORS_ORIGIN=http://localhost:3005,http://localhost:8005
NODE_ENV=development

# =============================================================================
# 2. DATABASE
# =============================================================================

MONGODB_URI=mongodb://localhost:27017/aichatdesk

# =============================================================================
# 3. AI CONFIGURATION (Claude)
# =============================================================================

# Get from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=sk-ant-api03-YOUR_KEY_HERE
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_CONFIDENCE_THRESHOLD=0.7
CLAUDE_MAX_TOKENS=1024

# =============================================================================
# 4. VECTOR EMBEDDINGS (for RAG / Knowledge Base)
# =============================================================================

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# 5. EMAIL NOTIFICATIONS (SendGrid - Optional)
# =============================================================================

# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.YOUR_KEY_HERE
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=AIChatDesk Support
SENDGRID_TO_EMAIL=support@yourcompany.com

# =============================================================================
# 6. FILE UPLOADS
# =============================================================================

MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=png,jpg,jpeg,gif,pdf,txt,log,zip,doc,docx

# =============================================================================
# 7. RATE LIMITING
# =============================================================================

RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# 8. AGENT DASHBOARD AUTH
# =============================================================================

# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERATE_A_RANDOM_64_CHAR_HEX_STRING
JWT_EXPIRES_IN=7d
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=changeme123

# =============================================================================
# 9. MICROSOFT GRAPH / OFFICE 365 CALENDAR (Optional)
# =============================================================================

# Get from: https://portal.azure.com > App registrations
# Required permissions: Calendars.ReadWrite (Application)
MICROSOFT_GRAPH_CLIENT_ID=
MICROSOFT_GRAPH_CLIENT_SECRET=
MICROSOFT_GRAPH_TENANT_ID=
OFFICE365_CALENDAR_EMAIL=

# =============================================================================
# 10. OPTIONAL FEATURES
# =============================================================================

VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
WEBHOOK_URL=

# Path to test HTML pages (development only)
# TEST_PAGES_PATH=/path/to/your/project/templates/test
